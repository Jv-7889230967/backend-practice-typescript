{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "src/**/*",
      "types/**/*",
    ],
    "target": "es2016",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}